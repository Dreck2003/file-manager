generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  username String
  email    String   @unique
  file     File[]
  password String   @unique
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model File {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  user     User     @relation(fields: [userId], references: [id])
  url      String
  userId   Int      @unique
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

